# ConsentHub Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# ============================================
# SUPABASE (Required: Module 1+)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# REDIS / UPSTASH (Required: Module 3+)
# ============================================
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# AZURE AD (Required: Module 1+)
# ============================================
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id

# ============================================
# DYNAMICS 365 (Required: Module 4+)
# ============================================
DYNAMICS_ORG_URL=https://your-org.crm.dynamics.com
DYNAMICS_CLIENT_ID=your-dynamics-app-id
DYNAMICS_CLIENT_SECRET=your-dynamics-app-secret
DYNAMICS_WEBHOOK_SECRET=your-webhook-hmac-secret

# ============================================
# EMAIL / RESEND (Required: Module 3+)
# ============================================
RESEND_API_KEY=re_your-api-key

# ============================================
# MONITORING / SENTRY (Required: Module 7)
# ============================================
SENTRY_DSN=https://your-key@sentry.io/your-project

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ConsentHub
